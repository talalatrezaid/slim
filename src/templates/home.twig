<!DOCTYPE html>
<html lang="en">
<head>
  <title>Grace Tailor Orders</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
  <h2>Orders(<b id="showing">0</b>of <b id="total">0</b>)</h2>
  <p>The table showing orders for a tailor shop just an example</p>        
  <h5> Filter: </h5>
  <input type="date" name="date" id="date" />     
  <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Order Price</th>
        <th>Order Date</th>
      </tr>
    </thead>
    <tbody id="body">
    
    </tbody>
  </table>
</div>
<script type="text/javascript">
function get_orders(){
    $.ajax({
        url: '/get_orders?date='+$("#date").val(),
        type: 'get',
        data: {
            
        },
        success: function (res) {
            console.log(res);
            $("#showing").html(res.orders.length);
            $("#total").html(res.total_orders);
            var html = "";
            res.orders.map((row)=>
            {
                html+='<tr>';
                html+='<td>';
                html+=row.full_name;
                html+='</td>';
                
                html+='<td>';
                html+=row.contact;
                html+='</td>';

                html+='<td>';
                html+=row.price;
                html+='</td>';

                html+='<td>';
                html+=row.date;
                html+='</td>';
                
                html+='</tr>';
            });
            $("#body").html(html);
            console.log('it worked!');
        },
        error: function () {
            console.log('it failed!');
        }
    });
}
    $(document).ready((e)=>{
         get_orders();
         $("#date").change(()=>{
            get_orders();
         });
    });
</script>
</body>
</html>
